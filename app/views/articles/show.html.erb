<div class="card mb-3 w-50 h-100 mx-auto">
  <%= image_tag(@article.image, class: "card-img-top") %>
  <div class="card-body">
    <h4 class="card-title"><%= @article.title %></h4><a href="/articles/<%= @article.id %>/vote"><%= vote_button(@article) %></a>
    <p class="card-text"><%= @article.text %></p>
    <p class="card-text"><small class="text-muted">Last updated <%= time_ago_in_words(@article.updated_at) %></small></p>
  </div>
</div>